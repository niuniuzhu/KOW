{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "kow(local)",
			"type": "chrome",
			"request": "launch",
			"file": "${workspaceRoot}/bin/index.html",
			"runtimeArgs": [
				"--allow-file-access-from-files",
				"--auto-open-devtools-for-tabs",
				"--allow-insecure-localhost"
			],
			"sourceMaps": true,
			"webRoot": "${workspaceRoot}",
			"disableNetworkCache": true
		},
		{
			"name": "kow(https)",
			"type": "chrome",
			"request": "launch",
			"url": "https://localhost/kow/Client/bin/index.html",
			"runtimeArgs": [
				"--allow-file-access-from-files",
				"--auto-open-devtools-for-tabs",
				"--allow-insecure-localhost"
			],
			"sourceMaps": true,
			"webRoot": "${workspaceRoot}",
			"disableNetworkCache": true
		},
		{
			"name": "kow(pressure)",
			"type": "chrome",
			"request": "launch",
			"file": "${workspaceRoot}/bin/index.html?mode=1",
			"runtimeArgs": [
				"--allow-file-access-from-files",
				"--auto-open-devtools-for-tabs",
				"--allow-insecure-localhost"
			],
			"sourceMaps": true,
			"webRoot": "${workspaceRoot}",
			"disableNetworkCache": true
		}
	]
}