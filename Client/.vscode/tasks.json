{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build client",
			"type": "shell",
			"command": "tsc",
			"args": [
				"-p",
				"./tsconfig.json"
			],
			"group": "build",
			"presentation": {
				"panel": "shared",
				"reveal": "always"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Build wx",
			"type": "shell",
			"command": "tsc",
			"args": [
				"-p",
				"./tsconfig_es6.json"
			],
			"group": "build",
			"presentation": {
				"panel": "shared",
				"reveal": "always"
			},
			"problemMatcher": [
				"$tsc"
			]
		}
	]
}